<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pokeListFrg"
    style="@style/fragments"
    android:background="#4E4AB3">


    <Button
        android:id="@+id/button"
        style="@style/button" />

    <LinearLayout
        android:id="@+id/editboxLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Pokemon name"
            android:inputType="textPersonName"
            android:textColor="@color/search"
            android:layout_marginBottom="20dp"
            android:textColorHint="#D6C8C8" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/progressBar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewList"
        style="@style/recyclerView"></androidx.recyclerview.widget.RecyclerView>

    <include
        style="@style/contentLayout"
        layout="@layout/content_layout"></include>


</RelativeLayout>